# daniellacos.se server block
server {
  root /var/www/html;

  index index.html index.htm index.nginx-debian.html;

  server_name daniellacos.se; # managed by Certbot

  location / {
    # First attempt to serve request as file, then
    # as directory, then fall back to displaying a 404.
    try_files $uri $uri/ =404;
  }

  listen [::]:443 ssl http2 ipv6only=on; # managed by Certbot
  listen 443 ssl http2; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/daniellacos.se/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/daniellacos.se/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

# daniellacos.se http => https redirect
server {
  if ($host = daniellacos.se) {
    return 301 https://$host$request_uri;
  } # managed by Certbot

  if ($host ~ ^[^.]+\.daniellacos\.se$) {
    return 301 https://$host$request_uri;
  } # managed by Certbot

  listen 80;
  listen [::]:80;

  server_name daniellacos.se;
  return 404; # managed by Certbot
}

# *.daniellacos.se server block
server {
  root /var/www/html;

  index index.html index.htm index.nginx-debian.html;

  server_name _;

  location / {
    try_files $uri $uri/ =404;
  }

  listen [::]:443 ssl http2 ipv6only=on; # managed by Certbot
  listen 443 ssl http2; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/daniellacos.se/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/daniellacos.se/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

# *.daniellacos.se http => https redirect
server {
  if ($host ~ ^[^.]+\.daniellacos\.se$) {
    return 301 https://$host$request_uri;
  } # managed by Certbot

  listen 80 default_server;
  listen [::]:80 default_server;

  server_name _;
  return 404; # managed by Certbot
}
