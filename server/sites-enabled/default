# http => https redirect
server {
  listen 80 default_server;
  listen [::]:80 default_server;

  server_name daniellacos.se www.daniellacos.se;

  return 301 https://$host$request_uri;
}

server {
  server_name daniellacos.se www.daniellacos.se;

  listen [::]:443 ssl http2 ipv6only=on;
  listen 443 ssl http2;

  ssl_certificate /etc/letsencrypt/live/daniellacos.se-0001/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/daniellacos.se-0001/privkey.pem;
  include /etc/letsencrypt/options-ssl-nginx.conf;
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

  location /slots {
    proxy_pass https://slots.daniellacos.se$request_uri;
  }

  location / {
    return 301 https://trello.com/b/F5TSktpz/resume;
  }
}
